	<section id ="mid-part">
	<div class="layer">
		<button class="open-button" onclick="openForm()">Donate Blood</button>
		<div class="form-popup" id="myForm">
  			<form action="/services1" method="post" class="form-container">
    		<h1>Donate Blood</h1>

    		<label for="name"><b>Name</b></label>
    		<input type="text" placeholder="Enter Name" name="name" required>

    		<label for="contact"><b>Contact No.</b></label>
    		<input type="number" placeholder="Enter Contact No." name="contact" required>

    		<label for="email"><b>Email</b></label>
    		<input type="email" placeholder="Enter Email" name="email" required>

    		<label for="grp"><b>Blood Group</b></label>
    		<input type="text" placeholder="Enter Blood Group" name="grp" required>

    		<button type="submit" value="Save" class="btn">Save Details</button>
    		<button type="button" class="btn cancel" onclick="closeForm()">Close</button>
  			</form>
		</div>

		<button class="open-button" onclick="openForm2()">Looking For Blood</button>
		<div class="form-popup" id="myForm2">
  			<form action="/services2" method="post" class="form-container">
    		<h1>Looking For Blood</h1>

    		<label for="name"><b>Name</b></label>
    		<input type="text" placeholder="Enter Name" name="name" required>

    		<label for="contact"><b>Contact No.</b></label>
    		<input type="number" placeholder="Enter Contact No." name="contact" required>

    		<label for="email"><b>Email</b></label>
    		<input type="email" placeholder="Enter Email" name="email" required>

    		<label for="grp"><b>Blood Group You Need</b></label>
    		<input type="text" placeholder="Enter Blood Group" name="grp" required>

    		<label for="unit"><b>Units of Blood Required</b></label>
    		<input type="number" placeholder="Units" name="unit" required>

    		<button type="submit" value="Save"  class="btn">Save Details</button>
    		<button type="button" class="btn cancel" onclick="closeForm2()">Close</button>
  			</form>
		</div>

		<button class="open-button" onclick="openForm3()">Location Nearby</button>
		<div class="form-popup" id="myForm3">
			<form action="/location" method="post" class="form-container">
    		<h1>Find Locations</h1>

    		<label for="loca"><b>Enter Location</b></label>
    		<input type="text" id = "location" placeholder="Enter location" name="name" required>
    		<button type="submit" value="Save" id = "loc-find" class="btn">Find</button>
    		<button type="button" class="btn cancel" onclick="closeForm3()">Close</button>
    		</form>
    	</div>
    	<button id = "submit-home" hidden></button>

	</div>
